<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rams_student_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/profile_BtnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/arrow_leftbutton"
        android:drawableTint="#293A82"
        app:layout_constraintBottom_toBottomOf="@+id/profile_YellowBG"
        app:layout_constraintEnd_toEndOf="@+id/profile_YellowBG"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@+id/profile_YellowBG"
        app:layout_constraintTop_toTopOf="@+id/profile_YellowBG"
        app:layout_constraintVertical_bias="0.021" />

    <ImageView
        android:id="@+id/profile_YellowBG"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="481dp"
        android:src="@color/apc_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_Picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24"
        app:srcCompat="@drawable/user_picture" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_YellowBG"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/profile_StudentNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Student Name:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.173" />

        <TextView
            android:id="@+id/profile_StudentNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunitosans_bold"
            android:hint="Patatas De la PeÃ±a"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_StudentNameTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_StudentNameTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/profile_StudentNumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Student Number:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/profile_StudentNameTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_StudentNameTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_StudentNameTitle"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/profile_StudentNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunitosans_bold"
            android:hint="2021-133742"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_StudentNumberTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_StudentNumberTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/profile_EmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Email:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/profile_StudentNumberTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_StudentNumberTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_StudentNumberTitle"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/profile_EmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunitosans_bold"
            android:hint="pdlp@student.apc.edu.ph"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_EmailTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_EmailTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/profile_CourseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Course:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/profile_EmailTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_EmailTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_EmailTitle"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/profile_CourseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunitosans_bold"
            android:hint="BP, Bachelor of Patatas"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_CourseTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_CourseTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/profile_ScholarshipTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Scholarship:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/profile_CourseTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_CourseTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_CourseTitle"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/profile_ScholarshipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunitosans_bold"
            android:hint="SM Foundation (100%)"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_ScholarshipTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_ScholarshipTitle"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/profile_EnrollmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Date of Enrollment:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/profile_ScholarshipTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_ScholarshipTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_ScholarshipTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/profile_EnrollmentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunitosans_bold"
            android:hint="MM-DD-YYYY"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_EnrollmentTitle"
            app:layout_constraintTop_toBottomOf="@+id/profile_EnrollmentTitle"
            app:layout_constraintVertical_bias="0" />

        <Button
            android:id="@+id/profile_btnLogOut"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/logout_rectangle"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.97" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>