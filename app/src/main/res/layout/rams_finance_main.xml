<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentFinance">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:src="@color/apc_darker_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/apc_gray_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/background_yellow_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/finance_main_backBTN"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/arrow_leftbutton"
                android:backgroundTint="@color/apc_darker_blue"
                app:layout_constraintBottom_toBottomOf="@+id/finance_Main_Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/finance_Main_Title"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/finance_Main_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/nunitosans"
                android:text="Finance Transactions"
                android:textColor="@color/apc_darker_blue"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/finance_main_backBTN"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/online_payment_btn"
                android:layout_width="365dp"
                android:layout_height="150dp"
                android:layout_marginTop="64dp"
                android:background="@drawable/button_rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/finance_Main_Title"
                app:layout_constraintVertical_bias="0"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/online_payment_clipboard"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/clipboard_list"
                app:layout_constraintBottom_toBottomOf="@+id/online_payment_btn"
                app:layout_constraintEnd_toEndOf="@+id/online_payment_btn"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="@+id/online_payment_btn"
                app:layout_constraintTop_toTopOf="@+id/online_payment_btn"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/online_payment_line"
                android:layout_width="3dp"
                android:layout_height="120dp"
                android:background="@drawable/button_rectangle"
                android:backgroundTint="@color/apc_blue"
                app:layout_constraintBottom_toBottomOf="@+id/online_payment_btn"
                app:layout_constraintEnd_toEndOf="@+id/online_payment_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/online_payment_clipboard"
                app:layout_constraintTop_toTopOf="@+id/online_payment_btn"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/online_payment_title_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/nunitosans"
                android:text="Online Payment"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/online_payment_btn"
                app:layout_constraintEnd_toEndOf="@+id/online_payment_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/online_payment_clipboard"
                app:layout_constraintTop_toTopOf="@+id/online_payment_btn"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/online_payment_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunitosans"
                android:text="Create payment for
                \nEnrollment Tuition or \nOthers (Previous Balance, etc.)"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/online_payment_btn"
                app:layout_constraintEnd_toEndOf="@+id/online_payment_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/online_payment_title_btn"
                app:layout_constraintTop_toBottomOf="@+id/online_payment_title_btn"
                app:layout_constraintVertical_bias="0" />

            <ImageButton
                android:id="@+id/online_payment_records_btn"
                android:layout_width="365dp"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/online_payment_btn"
                app:layout_constraintVertical_bias="0"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/online_payment_records_clipboard"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/clipboard_list"
                app:layout_constraintBottom_toBottomOf="@+id/online_payment_records_btn"
                app:layout_constraintEnd_toEndOf="@+id/online_payment_records_btn"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="@+id/online_payment_records_btn"
                app:layout_constraintTop_toTopOf="@+id/online_payment_records_btn"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/online_payment_records_line"
                android:layout_width="3dp"
                android:layout_height="120dp"
                android:background="@drawable/button_rectangle"
                android:backgroundTint="@color/apc_blue"
                app:layout_constraintBottom_toBottomOf="@+id/online_payment_records_btn"
                app:layout_constraintEnd_toEndOf="@+id/online_payment_records_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/online_payment_records_clipboard"
                app:layout_constraintTop_toTopOf="@+id/online_payment_records_btn"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/online_payment_records_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/nunitosans"
                android:text="Online Payment Records"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/online_payment_records_btn"
                app:layout_constraintEnd_toEndOf="@+id/online_payment_records_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/online_payment_records_clipboard"
                app:layout_constraintTop_toTopOf="@+id/online_payment_records_btn"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/online_payment_records_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunitosans"
                android:text="List of Online Payment Records
                \nOnline Credit/Debit Card Payments"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/online_payment_records_btn"
                app:layout_constraintEnd_toEndOf="@+id/online_payment_records_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/online_payment_records_title"
                app:layout_constraintTop_toBottomOf="@+id/online_payment_records_title"
                app:layout_constraintVertical_bias="0" />

            <ImageButton
                android:id="@+id/paynamics_btn"
                android:layout_width="365dp"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/online_payment_records_btn"
                app:layout_constraintVertical_bias="0"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/paynamics_clipboard"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/clipboard_list"
                app:layout_constraintBottom_toBottomOf="@+id/paynamics_btn"
                app:layout_constraintEnd_toEndOf="@+id/paynamics_btn"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="@+id/paynamics_btn"
                app:layout_constraintTop_toTopOf="@+id/paynamics_btn"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/paynamics_line"
                android:layout_width="3dp"
                android:layout_height="120dp"
                android:background="@drawable/button_rectangle"
                android:backgroundTint="@color/apc_blue"
                app:layout_constraintBottom_toBottomOf="@+id/paynamics_btn"
                app:layout_constraintEnd_toEndOf="@+id/paynamics_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/paynamics_clipboard"
                app:layout_constraintTop_toTopOf="@+id/paynamics_btn"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/paynamics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/nunitosans"
                android:text="Paynamics"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/paynamics_btn"
                app:layout_constraintEnd_toEndOf="@+id/paynamics_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/paynamics_clipboard"
                app:layout_constraintTop_toTopOf="@+id/paynamics_btn"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/enrollment_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunitosans"
                android:text="Paynamics Payment Transactions"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/paynamics_btn"
                app:layout_constraintEnd_toEndOf="@+id/paynamics_btn"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/paynamics_title"
                app:layout_constraintTop_toBottomOf="@+id/paynamics_title"
                app:layout_constraintVertical_bias="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>