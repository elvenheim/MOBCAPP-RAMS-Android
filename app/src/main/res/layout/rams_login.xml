<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/Background"/>

    <androidx.cardview.widget.CardView
        android:padding="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="15dp"
        android:layout_width="355dp"
        android:layout_height="431dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="355dp"
                android:layout_height="185dp"
                android:src="@color/apc_yellow" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="130dp"
                android:layout_height="128dp"
                android:src="@drawable/APC_Emblem"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Sign in using your Account"
                tools:layout_editor_absoluteX="-34dp"
                tools:layout_editor_absoluteY="193dp" />

            <EditText
                android:id="@+id/emailTextField"
                android:layout_width="313dp"
                android:layout_height="45dp"
                android:hint="Email"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/paswordTextField"
                android:layout_width="313dp"
                android:layout_height="48dp"
                android:hint="Password"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="291dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/apc_yellow"
                android:gravity="center"
                android:text="Log in"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="367dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</>